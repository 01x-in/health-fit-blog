---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blogs')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const categoryColors: Record<string, { bg: string; text: string }> = {
	health: { bg: 'bg-emerald-50', text: 'text-emerald-700' },
	fitness: { bg: 'bg-blue-50', text: 'text-blue-700' },
};
---

<Layout title="Healthie.FYI - Health & Fitness Insights">
	<section class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-20">
		<div class="max-w-3xl mx-auto text-center mb-16 md:mb-24">
			<h1 class="font-serif text-5xl md:text-7xl font-bold text-slate-900 tracking-tight mb-6 leading-tight">
				Healthie<span class="text-teal-600">.FYI</span>
			</h1>
			<p class="text-xl md:text-2xl text-slate-600 font-light leading-relaxed">
				Curated insights at the intersection of health, fitness, and technology.
			</p>
		</div>

		<div class="grid gap-x-8 gap-y-12 sm:grid-cols-2 lg:grid-cols-3">
			{
				posts.map((post) => {
					const category = post.slug.split('/')[0];
					const colors = categoryColors[category.toLowerCase()] || categoryColors.health;

					return (
						<a href={`${import.meta.env.BASE_URL}/blog/${post.slug}/`} class="group flex flex-col h-full">
							{post.data.heroImage && (
								<div class="mb-6 overflow-hidden rounded-2xl shadow-lg aspect-[3/2]">
									<img
										src={post.data.heroImage}
										alt={post.data.title}
										class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500 ease-in-out"
										loading="lazy"
									/>
								</div>
							)}

							<div class="flex flex-col flex-grow">
								<div class="flex items-center gap-3 mb-4">
									<span class={`inline-flex items-center px-2.5 py-1 text-[11px] font-bold tracking-widest uppercase rounded-full ${colors.bg} ${colors.text}`}>
										{category}
									</span>
									<span class="text-slate-400 text-xs font-medium uppercase tracking-wider">
										{post.data.pubDate.toLocaleDateString('en-us', {
											year: 'numeric',
											month: 'short',
											day: 'numeric',
										})}
									</span>
								</div>

								<h3 class="font-serif text-2xl font-bold text-slate-900 group-hover:text-teal-600 transition-colors mb-3 leading-snug">
									{post.data.title}
								</h3>

								<p class="text-slate-600 line-clamp-3 leading-relaxed mb-4 flex-grow">
									{post.data.description}
								</p>

								<div class="inline-flex items-center text-teal-600 font-medium text-sm group-hover:text-teal-700 transition-colors mt-auto">
									Read article
									<svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
									</svg>
								</div>
							</div>
						</a>
					);
				})
			}
		</div>

        {posts.length === 0 && (
            <div class="text-center py-20 bg-slate-50 rounded-3xl border border-slate-100">
				<div class="max-w-md mx-auto">
					<p class="font-serif text-2xl text-slate-900 mb-2">No stories yet</p>
			<p class="text-slate-500">Check back soon for the latest health and fitness insights.</p>
				</div>
            </div>
        )}
	</section>
</Layout>
